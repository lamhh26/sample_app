<li>
  <%= gravatar_for user, size: Settings.gravatar.size1 %>
  <%= link_to user.name, user %>
  <% if current_user.admin? && !current_user?(user) %>
    <%= link_to user, method: :delete, data: {confirm: t(".confirm")} do %>
      <span class="glyphicon glyphicon-trash"></span>
    <% end %>
  <% end %>
</li>
