<%= content_tag :li, id: "micropost-#{micropost.id}" do %>
  <%= link_to gravatar_for(micropost.user, size: Settings.gravatar.size1),
    micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content">
    <%= micropost.content %>
    <%= image_tag micropost.picture.url if micropost.picture? %>
  </span>
  <span class="timestamp">
    <%= t ".posted" %><%= time_ago_in_words(micropost.created_at) %><%= t ".ago" %>
    <% if current_user? micropost.user %>
      <%= link_to micropost, method: :delete, data: {confirm: t(".confirm")} do %>
        <span class="glyphicon glyphicon-trash"></span>
      <% end %>
    <% end %>
  </span>
<% end %>
